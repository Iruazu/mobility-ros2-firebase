#!/usr/bin/env python3

import rclpy
from rclpy.node import Node
from nav_msgs.msg import Odometry
import firebase_admin
from firebase_admin import credentials, db
import yaml
import os
from ament_index_python.packages import get_package_share_directory

class MultiRobotFirebaseBridge(Node):
    def __init__(self):
        super().__init__('multi_robot_firebase_bridge')

        # è¨­å®šãƒ•ã‚¡ã‚¤ãƒ«ã®èª­ã¿è¾¼ã¿
        config_path = os.path.join(
            get_package_share_directory('ros2_firebase_bridge'),
            'config', 'firebase_config.yaml'
        )

        with open(config_path, 'r') as f:
            config = yaml.safe_load(f)

        # FirebaseåˆæœŸåŒ–
        if not firebase_admin._apps:
            cred = credentials.Certificate(config['firebase']['service_account_key'])
            firebase_admin.initialize_app(cred, {
                'databaseURL': config['firebase']['database_url']
            })

        self.db_ref = db.reference('robots')

        # ãƒ­ãƒœãƒƒãƒˆ1ã®ã‚µãƒ–ã‚¹ã‚¯ãƒ©ã‚¤ãƒãƒ¼
        self.robot1_sub = self.create_subscription(
            Odometry,
            '/robot1/odom',
            lambda msg: self.odom_callback(msg, 'robot1'),
            10
        )

        # ãƒ­ãƒœãƒƒãƒˆ2ã®ã‚µãƒ–ã‚¹ã‚¯ãƒ©ã‚¤ãƒãƒ¼
        self.robot2_sub = self.create_subscription(
            Odometry,
            '/robot2/odom',
            lambda msg: self.odom_callback(msg, 'robot2'),
            10
        )

        self.get_logger().info('Multi-Robot Firebase Bridge initialized')
        self.get_logger().info('Listening to: /robot1/odom, /robot2/odom')

    def odom_callback(self, msg, robot_name):
        """Odometryãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å—ä¿¡ã—ã¦Firebaseã«é€ä¿¡"""
        position = {
            'x': msg.pose.pose.position.x,
            'y': msg.pose.pose.position.y,
            'z': msg.pose.pose.position.z,
            'orientation': {
                'x': msg.pose.pose.orientation.x,
                'y': msg.pose.pose.orientation.y,
                'z': msg.pose.pose.orientation.z,
                'w': msg.pose.pose.orientation.w
            }
        }

        # ğŸ”½ğŸ”½ update() â†’ set() ã«å¤‰æ›´ ğŸ”½ğŸ”½
        try:
            self.db_ref.child(robot_name).set({
                'position': position,
                'timestamp': {'.sv': 'timestamp'},
                'status': 'active'
            })

            self.get_logger().info(
                f'{robot_name}: x={position["x"]:.2f}, y={position["y"]:.2f}'
            )
        except Exception as e:
            self.get_logger().error(f'Failed to update Firebase: {e}')
def main(args=None):
    rclpy.init(args=args)
    node = MultiRobotFirebaseBridge()

    try:
        rclpy.spin(node)
    except KeyboardInterrupt:
        pass
    finally:
        node.destroy_node()
        rclpy.shutdown()

if __name__ == '__main__':
    main()